@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    @*<meta http-equiv="refresh" content="0;ie.html">*@

    <link rel="shortcut icon" href="~/Content/login.ico">
    <link href="~/Content/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/Content/HAdmin/css/font-awesome.css?v=4.4.0" rel="stylesheet">

    @*Sweet Alert*@
    <link href="~/Content/HAdmin/css/sweetalert/sweetalert.css" rel="stylesheet" />

    <link href="~/Content/HAdmin/css/animate.css" rel="stylesheet">
    <link href="~/Content/HAdmin/css/style.css?v=4.1.0" rel="stylesheet">
    <title>管理员登录</title>

    <script>
        if (window.top !== window.self) {
            window.top.location = window.location;
        }
    </script>
    @*全局js*@
    <script src="~/Content/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/bootstrap.min.js?v=3.3.6"></script>
    @*自定义js*@
    <script src="~/Content/content.js?v=1.0.0"></script>
    @*Sweet Alert*@
    <script src="~/Content/HAdmin/js/sweetalert/sweetalert.min.js"></script>
</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">
                    <img src="~/Content/Images/Admin.png" />
                </h1>
            </div>
            <h3>管理员登录</h3>
            <form class="m-t" role="form">
                <div class="form-group">
                    <input type="text" class="form-control" name="UserName" placeholder="用户名">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" placeholder="密码">
                </div>
                <button type="button" class="btn btn-primary block full-width m-b" onclick="LoginCheck()">登录</button>
            </form>
        </div>
    </div>
    <script>
    @*登录验证*@
        function LoginCheck() {
            var UserName = $("input[name=UserName]").val();
            var Password = $("input[name=Password]").val();

            if (UserName === "") {
                swal("", "请输入用户名", "warning");
                return;
            }
            if (Password === "") {
                swal("", "请输入密码", "warning");
                return;
            }
            $.post(
                '/Admin/LoginCheck',
                {
                    UserName: UserName,
                    Password: Password
                },
                function (data) {
                    if (data.Code !== 0) {
                        swal({
                            title:data.Title,
                            text: data.Content,
                            type: "success",
                            showConfirmButton:false
                        });
                        setTimeout("location.href='/Member/Index'", 800);
                    } else
                        swal(data.Title, data.Content, "error");
                }
                );
        }
    </script>
</body>
</html>
