@model List<UI.Logic.Model.Menu>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @{
            ViewBag.Title = ViewBag.Title ?? "后台";
        }
    </title>
    <link href="~/Content/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="~/Content/HAdmin/css/font-awesome.css?v=4.4.0" rel="stylesheet" />
    <link href="~/Content/HAdmin/css/animate.css" rel="stylesheet" />
    <link href="~/Content/HAdmin/css/style.css?v=4.1.0" rel="stylesheet" />

    

</head>
<body class="fixed-sidebar full-height-layout gray-bg" style="overflow: hidden">
    <div id="wrapper">
        @*左侧导航*@
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs" style="font-size: 20px">
                                        <i class="fa fa-area-chart"></i>
                                        <strong class="font-bold">hAdmin</strong>
                                    </span>
                                </span>
                            </a>
                        </div>
                        <div class="logo-element">hAdmin</div>
                    </li>
                    <li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
                        <span class="ng-scope">分类</span>
                    </li>
                    <li>
                        <a class="J_menuItem" href="@Url.Action("Index", "Member")">
                            <i class="fa fa-home"></i>
                            <span class="nav-label">主页</span>
                        </a>
                    </li>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <li>
                                <a href="@item.CodeUrl">
                                    <i class="fa fa fa-bar-chart-o"></i>
                                    <span class="nav-label">@item.Name</span>
                                    <span class="fa arrow"></span>
                                </a>
                                <ul class="nav nav-second-level">
                                    @foreach (var subItem in item.SubMenus)
                                    {
                                        <li>
                                            <a class="J_menuItem" href="@subItem.CodeUrl">@subItem.Name</a>
                                        </li>
                                    }

                                </ul>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @*全局js*@
    <script src="~/Content/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/bootstrap.min.js?v=3.3.6"></script>
    <script src="~/Content/HAdmin/js/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/HAdmin/js/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/HAdmin/js/layer/layer.min.js"></script>

    @*自定义js*@
    <script src="~/Content/HAdmin/hAdmin.js?v=4.1.0"></script>
    <script type="text/javascript" src="~/Content/HAdmin/index.js"></script>

    @*第三方插件*@
    <script src="~/Content/HAdmin/js/pace/pace.min.js"></script>

</body>
</html>