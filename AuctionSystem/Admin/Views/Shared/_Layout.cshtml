<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @{
            ViewBag.Title = ViewBag.Title ?? "后台";
        }
    </title>
    <link href="~/Content/bootstrap.min.css?v=3.3.6" rel="stylesheet" />
    <link href="~/Content/HAdmin/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/HAdmin/animate.css" rel="stylesheet" />
    <link href="~/Content/HAdmin/style.css" rel="stylesheet" />
    <link href="~/Content/HAdmin/layer/skin/layer.css" rel="stylesheet" />

    @*全局js*@
    <script src="~/Content/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/bootstrap.min.js?v=3.3.6"></script>
    <script src="~/Content/HAdmin/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/HAdmin/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/HAdmin/layer/layer.min.js"></script>

    @*自定义js*@
    <script src="~/Content/HAdmin/hAdmin.js?v=4.1.0"></script>
    <script type="text/javascript" src="~/Content/HAdmin/index.js"></script>

    @*第三方插件*@
    @*<script src="~/Content/HAdmin/pace/pace.min.js"></script>*@

</head>
<body class="fixed-sidebar full-height-layout gray-bg" style="overflow: hidden">
    <div id="wrapper">
        @*左侧导航*@
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs" style="font-size: 20px">
                                        <i class="fa fa-area-chart"></i>
                                        <strong class="font-bold">hAdmin</strong>
                                    </span>
                                </span>
                            </a>
                        </div>
                        <div class="logo-element">hAdmin</div>
                    </li>
                    <li class="hidden-folded padder m-t m-b-sm text-muted text-xs">
                        <span class="ng-scope">分类</span>
                    </li>
                    <li>
                        <a class="J_menuItem" href="@Url.Action("Index", "Member")">
                            <i class="fa fa-home"></i>
                            <span class="nav-label">主页</span>
                        </a>
                    </li>
                    <li class="line dk"></li>
                    @if (ViewBag.iMenuList != null)
                    {
                        foreach (var item in ViewBag.iMenuList)
                        {
                            <li>
                                <a href="@item.CodeUrl">
                                    <i class="fa fa fa-bar-chart-o"></i>
                                    <span class="nav-label">@item.Name</span>
                                    <span class="fa arrow"></span>
                                </a>
                                <ul class="nav nav-second-level">
                                    @foreach (var subItem in item.MenuLists)
                                    {
                                        <li>
                                            <a class="J_menuItem" href="@subItem.CodeUrl">@subItem.Name</a>
                                        </li>
                                    }

                                </ul>
                            </li>
                            <li class="line dk"></li>
                        }
                    }
                </ul>
            </div>
        </nav>
        @*右侧部分*@
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-info " href="#"><i class="fa fa-bars"></i> </a>
                        
                    </div>
                </nav>
            </div>
            <div class="row J_mainContent" id="content-main">
                <div class="col-sm-12">
                    <div class="ibox float-e-margins">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    

</body>
</html>